{
	"info": {
		"_postman_id": "12345678-1234-1234-1234-123456789012",
		"name": "Todo List API",
		"description": "API collection for Todo List application testing",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Todos",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						""
					]
				}
			}
		},
		{
			"name": "Create Todo",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "todo",
							"value": "Complete project documentation",
							"type": "text"
						},
						{
							"key": "due",
							"value": "2024-12-25T14:30",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/create",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"create"
					]
				}
			}
		},
		{
			"name": "Toggle Todo Completion",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"completed\": true\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/toggle/{{todoId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"toggle",
						"{{todoId}}"
					]
				}
			}
		},
		{
			"name": "Update Todo",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/x-www-form-urlencoded"
					}
				],
				"body": {
					"mode": "urlencoded",
					"urlencoded": [
						{
							"key": "todo",
							"value": "Updated todo text",
							"type": "text"
						},
						{
							"key": "due",
							"value": "2024-12-30T16:00",
							"type": "text"
						}
					]
				},
				"url": {
					"raw": "{{baseUrl}}/update/{{todoId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"update",
						"{{todoId}}"
					]
				}
			}
		},
		{
			"name": "Delete Todo",
			"request": {
				"method": "POST",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/delete/{{todoId}}",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"delete",
						"{{todoId}}"
					]
				}
			}
		}
	],
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:3000"
		},
		{
			"key": "todoId",
			"value": "replace-with-actual-todo-id"
		}
	]
}